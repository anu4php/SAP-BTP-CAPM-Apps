
<mvc:View
  controllerName="cmmaccessadminrights.controller.FlexibleColumnLayout"
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:l="sap.ui.layout"
  displayBlock="true"
  >
  <App>
  <Page id="fclpage">
	<f:DynamicPage>

    
    <!-- Header: One DynamicPageHeader with two toolbars stacked -->
    <f:header>
      <f:DynamicPageHeader>
        <!-- Desktop/Tablet header (hidden on phones) -->
<VBox id="toolbartitle" visible="{= !${device>/system/phone} }">
  <Toolbar height="50px" id="oHeadTile" class="oHeadLinks">
    <Title text="Access Administration" class="title"/>
    <ToolbarSpacer/>
    <Link text="Request New Enerline Access"/>
    <Link text="View Access Rights Description"/>
  </Toolbar>
</VBox>

<!-- Phone header (visible only on phones) -->
<VBox id="phoneHeader" visible="{device>/system/phone}">
  <Toolbar height="50px" id="oPhoneHeadTile">
    <!-- optional back on phones -->
   <!-- <Button icon="sap-icon://nav-back" press="_onPhoneBack"/> -->
    <Title text="{= ${detail>/selectedUserName} || 'Details' }" class="title"/>
    <ToolbarSpacer/>
  </Toolbar>
</VBox>
      </f:DynamicPageHeader>
    </f:header>
    
    <!-- Main Content Tabs -->
    <f:content>
    <f:FlexibleColumnLayout id="fcl" layout="TwoColumnsMidExpanded" backgroundDesign="Translucent" stateChange="onStateChanged" class="sapUiResponsivePadding"/>


      <IconTabBar
        id="idTabBar"
        selectedKey="{viewModel>/selectedTabKey}"
        expanded="true"
        select="onTaabSelect"
        >

        <items>

          <!-- Tab 1: Enerline Users -->
          <IconTabFilter id="itEnUser" key="tab1" text="Enerline Users" visible="{viewModel>/tabVisibility/tab1}" >
          <Page id="container6"></Page>
           <Page id="container22">
           <App></App>
            </Page>
          
          </IconTabFilter>

          <!-- Tab 2 -->
        
		  <IconTabFilter id="itAgents" key="tab2" text="Agent Companies" visible="{viewModel>/tabVisibility/tab2}">
            <Page id="container1" class="AgnetTab">
           </Page>
          </IconTabFilter>
          <!-- Tab 3 -->
          <IconTabFilter id="itEndUsers" key="tab3" text="End User Customers" visible="{viewModel>/tabVisibility/tab3}">
            <Page id="container2">
            </Page>
          </IconTabFilter>

          <!-- Tab 4 -->
          <IconTabFilter id="itDircUser" key="tab4" text="Enerline Direct Connect" visible="{viewModel>/tabVisibility/tab4}">
            <Page id="container3" title="Enerline Direct Connect Coming Soon!!!!">

            </Page>
          </IconTabFilter>

          <!-- Tab 5 -->
          <IconTabFilter id="itfTermination" key="tab5" text="Future-Dated Termination" visible="{viewModel>/tabVisibility/tab5}">
            <Page id="container4">
            <core:Fragment  fragmentName="cmmaccessadminrights.fragments.oFuturTermination" type="XML"/>

                     
            </Page>
          </IconTabFilter>

        </items>
      </IconTabBar>
    </f:content>

  </f:DynamicPage>
	<!-- Closing the Page element for the Enerline Users tab -->
	</Page>
</App>
</mvc:View>
