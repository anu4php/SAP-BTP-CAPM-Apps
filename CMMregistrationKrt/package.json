{
  "name": "CMMregistration",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.14.1",
    "@cap-js/hana": "1.8.1",
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/http-client": "^4.0.2",
    "@sap-cloud-sdk/mail-client": "^3.24.0",
    "@sap-cloud-sdk/resilience": "^4.0.1",
    "@sap/cds": "^8",
    "@sap/hdi-deploy": "^5.4.2",
    "@sap/xssec": "^4",
    "axios": "^1.8.4",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.9.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "dev": "cds watch --profile hybrid",
    "db": " node node_modules/@sap/hdi-deploy/deploy.js  --auto-undeploy",
    "watch-cmmregistration": "cds watch --open cmmregistration/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy CMMregistration --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "connectivity": true,
      "db": "hana",
      "auth": {
        "kind": "mocked",
        "restrict_all_services": false
      },
      "server": {
    "index": true
  },
      "get_address": {
        "kind": "odata",
        "credentials": {
          "destination": "address_api",
          "requestTimeout": 10000
        }
      },
      "Dest_CPI": {
        "kind": "rest",
        "credentials": {
          "destination": "CPI",
          "csrf": true
        }
      },
      "SendMail": {
        "kind": "rest",
        "credentials": {
          "destination": "mailDest"
        }
      },
      "google_captcha": {
        "kind": "rest",
        "credentials": {
          "destination": "googlecapcture"
        }
      },
      "destinations": true,
      "[production]": {
        "auth": {
          "kind": "xsuaa"
        },
        "db": "hana"
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}
