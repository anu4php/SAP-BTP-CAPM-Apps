<core:FragmentDefinition 
xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:cards="sap.f.cards"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns:semantic="sap.m.semantic"
    xmlns:u="sap.ui.unified"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
    height="100%">
    <Dialog id="createUserDialog" title="Change Company"
        stretch="false"
        resizable="true"
        draggable="true">
        <VBox>
            <SearchField width="100%" placeholder="Search for a company" liveChange="onSearch"/>
            <List id="companyList" mode="SingleSelectMaster" select="onCompanySelect">
                <items>
                    <StandardListItem title="Enbridge Gas Inc." />
                    <StandardListItem title="3M Canada Company" />
                    <StandardListItem title="A.E. Sharp Ltd." />
                </items>
            </List>
        </VBox>
        <endButton>
            <Button text="Cancel" press="onClose"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
